#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🧪 Running pre-commit checks..."

# Run linter
echo "📝 Running linter..."
npm run lint || exit 1

# Run type check
echo "🔍 Running type check..."
npm run type-check || exit 1

# Run tests
echo "🧪 Running tests..."
NODE_ENV=test npm test || exit 1

echo "✅ All checks passed!"
